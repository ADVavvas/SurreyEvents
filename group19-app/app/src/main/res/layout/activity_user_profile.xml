<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.UserProfileActivity">

    <ImageView
        android:id="@+id/profile_user_imageview"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/event_marker_basic"
        android:layout_marginStart="8dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="User Picture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/profile_username_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="johndoe"
        app:layout_constraintEnd_toEndOf="@+id/profile_user_imageview"
        app:layout_constraintStart_toStartOf="@+id/profile_user_imageview"
        app:layout_constraintTop_toBottomOf="@+id/profile_user_imageview" />

    <TextView
        android:id="@+id/profile_events_info"
        android:layout_width="85dp"
        android:layout_height="25dp"
        android:text="@string/profile_event_number"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/profile_events_number"
        app:layout_constraintTop_toBottomOf="@+id/profile_events_number" />

    <TextView
        android:id="@+id/profile_events_number"
        android:layout_width="85dp"
        android:layout_height="27dp"
        android:layout_marginStart="16dp"
        android:text="0"
        app:layout_constraintStart_toEndOf="@+id/profile_user_imageview"
        app:layout_constraintTop_toTopOf="@+id/profile_user_imageview" />

</androidx.constraintlayout.ConstraintLayout>